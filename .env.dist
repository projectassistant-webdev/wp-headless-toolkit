# =============================================================================
# PA Headless Toolkit - Environment Configuration
# =============================================================================
# Copy to .env and configure for your project.
# All configuration is via environment variables - no database settings.
# =============================================================================

# --- Revalidation Module ---
# NEXTJS_REVALIDATION_URL=https://example.com/api/revalidate
# NEXTJS_REVALIDATION_SECRET=your-secret-here

# --- Frontend Redirect Module ---
# HEADLESS_FRONTEND_URL=https://example.com

# --- CORS Module (Phase 2) ---
# HEADLESS_CORS_ORIGINS=https://example.com,https://staging.example.com

# --- Preview Mode (Phase 3) ---
# HEADLESS_PREVIEW_SECRET=your-preview-secret

# --- Module Toggles ---
# Set to 'true' to disable specific modules
# PA_HEADLESS_DISABLE_REVALIDATION=false
# PA_HEADLESS_DISABLE_REST_SECURITY=false
# PA_HEADLESS_DISABLE_FRONTEND_REDIRECT=false
# PA_HEADLESS_DISABLE_MIGRATE_DB_COMPAT=false
# PA_HEADLESS_DISABLE_HEAD_CLEANUP=false
# PA_HEADLESS_DISABLE_CORS=false
# PA_HEADLESS_DISABLE_SECURITY_HEADERS=false

# --- Testing ---
# TEST_DB_NAME=wpgraphql_pa_headless_test
# TEST_DB_USER=root
# TEST_DB_HOST=localhost
# TEST_DB_PASSWORD=
# WP_VERSION=latest
