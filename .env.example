# WP Headless Toolkit - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# WORDPRESS DATABASE CONFIGURATION
# =============================================================================
WORDPRESS_DB_HOST=mysql
WORDPRESS_DB_NAME=wordpress_test
WORDPRESS_DB_USER=root
WORDPRESS_DB_PASSWORD=root

# =============================================================================
# WORDPRESS ADMIN CREDENTIALS (Test Environment)
# =============================================================================
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin
WORDPRESS_ADMIN_EMAIL=admin@example.com

# =============================================================================
# WORDPRESS TEST ENVIRONMENT
# =============================================================================
WP_TESTS_DIR=/tmp/wordpress-tests-lib
WP_TESTS_DB_NAME=wordpress_test

# =============================================================================
# DOCKER PORT ALLOCATION (Port Block 13)
# =============================================================================
# Host ports for Docker services. Assigned from central port registry.
# See: ~/apps/local-dev-port-offsets/ports/registry.json
WORDPRESS_PORT=9300
MYSQL_PORT=3436

# =============================================================================
# PHP CONFIGURATION
# =============================================================================
# PHP version used in the Docker WordPress image (build arg, not runtime)
# Supported: 8.1, 8.2, 8.3
PHP_VERSION=8.1

# =============================================================================
# PLUGIN CONFIGURATION - Core
# =============================================================================

# Frontend URL (used by FrontendRedirect and PreviewMode modules)
# HEADLESS_FRONTEND_URL=https://your-frontend.com

# =============================================================================
# PLUGIN CONFIGURATION - ISR Revalidation
# =============================================================================

# Next.js revalidation endpoint
# NEXTJS_REVALIDATION_URL=https://your-frontend.com/api/revalidate

# Shared secret for authenticating revalidation requests
# NEXTJS_REVALIDATION_SECRET=change-me-revalidation-secret

# =============================================================================
# PLUGIN CONFIGURATION - CORS
# =============================================================================

# Comma-separated list of allowed CORS origins
# HEADLESS_CORS_ORIGINS=https://your-frontend.com,http://localhost:3000

# =============================================================================
# PLUGIN CONFIGURATION - Preview Mode
# =============================================================================

# Shared secret for JWT token signing (preview authentication)
# HEADLESS_PREVIEW_SECRET=change-me-preview-secret

# Preview token expiry in seconds (default: 300 = 5 minutes)
# WP_HEADLESS_PREVIEW_TOKEN_EXPIRY=300

# =============================================================================
# PLUGIN CONFIGURATION - GraphQL Performance
# =============================================================================

# Cache TTL in seconds (default: 600 = 10 minutes)
# HEADLESS_GRAPHQL_CACHE_TTL=600

# Maximum query complexity score (default: 500)
# HEADLESS_GRAPHQL_COMPLEXITY_LIMIT=500

# =============================================================================
# PLUGIN CONFIGURATION - Security Headers (disabled by default)
# =============================================================================

# Set to true to enable security headers module
# WP_HEADLESS_ENABLE_SECURITY_HEADERS=false

# Override individual security headers (set to empty string to skip)
# WP_HEADLESS_X_CONTENT_TYPE_OPTIONS=nosniff
# WP_HEADLESS_X_FRAME_OPTIONS=DENY
# WP_HEADLESS_HSTS=max-age=31536000; includeSubDomains
# WP_HEADLESS_REFERRER_POLICY=strict-origin-when-cross-origin
# WP_HEADLESS_PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()

# =============================================================================
# PLUGIN CONFIGURATION - Module Toggles (uncomment to disable)
# =============================================================================

# WP_HEADLESS_DISABLE_REVALIDATION=true
# WP_HEADLESS_DISABLE_REST_SECURITY=true
# WP_HEADLESS_DISABLE_HEAD_CLEANUP=true
# WP_HEADLESS_DISABLE_FRONTEND_REDIRECT=true
# WP_HEADLESS_DISABLE_GRAPHQL_PERFORMANCE=true
# WP_HEADLESS_DISABLE_CORS=true
# WP_HEADLESS_DISABLE_SECURITY_HEADERS=true
# WP_HEADLESS_DISABLE_PREVIEW_MODE=true
# WP_HEADLESS_DISABLE_MIGRATE_DB_COMPAT=true
