# WP Headless Toolkit - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# WORDPRESS DATABASE CONFIGURATION
# =============================================================================
WORDPRESS_DB_HOST=mysql
WORDPRESS_DB_NAME=wordpress_test
WORDPRESS_DB_USER=root
WORDPRESS_DB_PASSWORD=root

# =============================================================================
# WORDPRESS ADMIN CREDENTIALS (Test Environment)
# =============================================================================
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin
WORDPRESS_ADMIN_EMAIL=admin@example.com

# =============================================================================
# WORDPRESS TEST ENVIRONMENT
# =============================================================================
WP_TESTS_DIR=/tmp/wordpress-tests-lib
WP_TESTS_DB_NAME=wordpress_test

# =============================================================================
# DOCKER PORT ALLOCATION (Port Block 13)
# =============================================================================
# Host ports for Docker services. Assigned from central port registry.
# See: ~/apps/local-dev-port-offsets/ports/registry.json
WORDPRESS_PORT=9300
MYSQL_PORT=3436

# =============================================================================
# PHP CONFIGURATION
# =============================================================================
# PHP version used in the Docker WordPress image (build arg, not runtime)
# Supported: 8.1, 8.2, 8.3
PHP_VERSION=8.1
