# Self-QA Automation Service - Environment Variables
# Copy this file to .env.portainer and fill in your actual values

# =============================================================================
# PORTAINER DEPLOYMENT CONFIGURATION
# =============================================================================
PORTAINER_URL=https://portainer.projectassistant.ai
PORTAINER_API_KEY=ptr_your_api_key_here
PORTAINER_ENDPOINT_ID=3
PORTAINER_STACK_ID=48

# =============================================================================
# BITBUCKET CREDENTIALS (for git-based stack deployment)
# =============================================================================
BITBUCKET_USERNAME=your-username
BITBUCKET_APP_PASSWORD=your-app-password

# =============================================================================
# ANTHROPIC AI CONFIGURATION
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# =============================================================================
# JIRA INTEGRATION (Bot Account: Jacob Cruz)
# =============================================================================
JIRA_BASE_URL=https://projectassistant.atlassian.net
JIRA_EMAIL=jacob.c@projectassistant.io
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_WEBHOOK_SECRET=your-webhook-secret-here
JIRA_CUSTOM_FIELD_URL=customfield_10100

# =============================================================================
# JACOB TIME TRACKING
# =============================================================================
# Minutes Jacob logs to Jira worklog per test (default: 30 = manual QA equivalent)
JACOB_TIME_LOGGED_MINUTES=30

# =============================================================================
# SLACK NOTIFICATIONS (Optional)
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#jacob

# =============================================================================
# PLAYWRIGHT CONFIGURATION
# =============================================================================
PLAYWRIGHT_HEADLESS=true
TEST_BREAKPOINTS=375,414,768,1024,1280,1440,1920
TEST_TIMEOUT=120000

# =============================================================================
# ADMIN UI CONFIGURATION
# =============================================================================
# CORS origins for Admin UI (comma-separated)
# Add your production domain and local development URLs
ADMIN_CORS_ORIGINS=http://localhost:5173,https://jacob.projectassistant.ai

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
MAX_CONCURRENT_TESTS=1
ENVIRONMENT=production
LOG_LEVEL=INFO

