{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.next/**": true,
    "**/.turbo/**": true,
    "**/.yarn/**": true,
    "**/.pnp.*": true,
    "**/out/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/env/**": true,
    "**/.env/**": true,
    "**/.prism/**": true,
    "**/docs/localdocs/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/out": true,
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/venv": true,
    "**/.venv": true,
    "**/env": true,
    "**/.env": false,
    "**/.prism": true,
    "**/docs/localdocs": true
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },

  // Performance optimizations
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.renderWhitespace": "none",
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.smoothScrolling": false,
  "editor.fastScrollSensitivity": 5,
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.suggest.maxVisibleSuggestions": 10,
  "editor.suggest.delay": 50,
  "editor.quickSuggestions": {
    "strings": false,
    "comments": false,
    "other": true
  },

  // Terminal performance
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.scrollback": 1000,

  // Extension optimizations
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,

  // Git optimizations
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.countBadge": "off",
  "git.decorations.enabled": true,
  "git.enableStatusBarSync": false,

  // Search optimizations
  "search.followSymlinks": false,
  "search.maxResults": 10000,
  "search.smartCase": true,

  // File handling
  "files.autoSave": "off",
  "files.hotExit": "onExitAndWindowClose",
  "files.restoreUndoStack": false,
  "files.maxMemoryForLargeFilesMB": 1024,

  // Telemetry (reduces background processes)
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.layoutControl.enabled": false,
  "workbench.tips.enabled": false,

  // Accessibility (disable if not needed)
  "editor.accessibilitySupport": "off",

  // Debug (disable inline values if not using debugger)
  "debug.inlineValues": "off",

  // Bracket pair colorization (native is faster)
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // TypeScript/JavaScript specific
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.surveys.enabled": false,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,

  // Python specific
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",

  // Formatting
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,

  // Reduce visual effects
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.list.smoothScrolling": false,
  "workbench.reduceMotion": "on",

  // Explorer optimizations
  "explorer.compactFolders": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Problem/Output panel
  "problems.autoReveal": false,
  "output.smartScroll.enabled": false,

  // Editor settings
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": false,
    "files.trimTrailingWhitespace": false
  },

  // Prevent VS Code Remote SSH from auto-forwarding Docker ports
  // These ports are managed by local-dev-port-offsets registry
  // Auto-forwarding creates proxy connections that block Supabase CLI
  "remote.autoForwardPortsSource": "process",
  "remote.portsAttributes": {
    "15000-15999": { "onAutoForward": "ignore" },
    "16300-16500": { "onAutoForward": "ignore" },
    "18000-19300": { "onAutoForward": "ignore" },
    "44300-44500": { "onAutoForward": "ignore" },
    "48500-48600": { "onAutoForward": "ignore" }
  }
}
